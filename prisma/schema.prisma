generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

// DB SCHEMAS
// After modifications you have to run `npx prisma migrate dev`
// relations
// jokes Joke[] // MANY JOKES
// from jokes AUTO COMPLETES
// user     User    @relation("UserToUser", fields: [userId], references: [id])
// userId   String
// User     User[]
// @relation("UserToUser")
// USER
model User {
    id                String   @id @default(cuid())
    confirmed         Boolean  @default(false)
    confirmation_code Int?
    email             String   @unique
    expiration_code   DateTime
    is_super_admin    Boolean  @default(false)
    name              String?  @db.VarChar(255)
    password          String   @db.VarChar(255) @ignore
    role              Role?    @relation(fields: [roleId], references: [id])
    roleId            String?
}

model Role {
    id    String @id @default(cuid())
    type  String @default("editor")
    users User[]
}
